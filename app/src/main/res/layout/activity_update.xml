<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kunalsingh.busmgmt.UpdateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:text="Name :"
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name2"
        android:layout_toRightOf="@id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Fathers Name :"
        android:layout_below="@id/name2"
        android:id="@+id/fathers_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fathers_name2"
        android:layout_below="@id/name2"
        android:layout_toRightOf="@id/fathers_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Mothers Name :"
        android:id="@+id/mother_name1"
        android:layout_below="@id/fathers_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mothers_name2"
        android:layout_below="@id/fathers_name2"
        android:layout_toRightOf="@id/mother_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address1"
        android:text="Address :"
        android:layout_below="@id/mothers_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/address2"
        android:layout_toRightOf="@id/address1"
        android:layout_below="@id/mothers_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Contact :"
        android:id="@+id/contact1"
        android:layout_below="@id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/contact2"
        android:layout_toRightOf="@id/contact1"
        android:layout_below="@id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fees1"
        android:text="Fees :"
        android:layout_below="@id/contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fees2"
        android:layout_toRightOf="@id/fees1"
        android:layout_below="@id/contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/total1"
        android:text="Total :"
        android:layout_below="@id/fees2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/total2"
        android:layout_below="@id/fees2"
        android:layout_toRightOf="@id/total1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/present1"
        android:text="Present :"
        android:layout_below="@id/total1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/present_two"
        android:text="ss"
        android:layout_below="@id/total1"
        android:layout_toRightOf="@id/present1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_show"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_fathers_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_mothers_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:text="Update"
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<Button
    android:text="Update"
    android:id="@+id/btn_change"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

</RelativeLayout>
